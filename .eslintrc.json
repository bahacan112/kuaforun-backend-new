{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module",
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "ignorePatterns": ["node_modules/", "dist/", "drizzle/", "drizzle.config.ts"],
  "overrides": [
    {
      "files": ["drizzle.config.ts"],
      // Disable type-aware linting for the Drizzle config file to avoid parserOptions.project errors
      // when the file is intentionally excluded from tsconfig.
      "parserOptions": { "project": false }
    }
  ],
  
  "rules": {
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",

    "import/no-unresolved": "off",

    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_", "ignoreRestSiblings": true }
    ],
    "@typescript-eslint/no-floating-promises": "error",
    "@typescript-eslint/no-misused-promises": ["error", { "checksVoidReturn": { "attributes": false } }],
    "@typescript-eslint/consistent-type-imports": "error"
  }
}