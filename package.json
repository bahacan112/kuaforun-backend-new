{
  "name": "kuaforun-backend-microservice",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:global": "cross-env DOTENV_CONFIG_PATH=../../.env tsx watch src/server.ts",
    "dev:remote": "cross-env DOTENV_CONFIG_PATH=../../.env.local tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dk:generate": "drizzle-kit generate",
    "migrate": "tsx src/scripts/migrate.ts",
    "seed": "tsx src/scripts/seed-admin.ts",
    "seed:service-templates": "tsx src/scripts/seed-service-templates.ts",
    "seed:admin": "tsx src/scripts/create-admin.ts",
    "seed:settings": "tsx src/scripts/seed-system-settings.ts",
    "ensure:db": "tsx src/scripts/ensure-db.ts",
    "align:schema": "tsx src/scripts/align-schema.ts",
    "serpapi:import": "tsx src/scripts/serpapi-import.ts --query barber --lat 41.0082 --lng 28.9784 --radius 3000 --lang tr --limit 10",
    "cron:update-bookings": "tsx src/scripts/update-booking-statuses.ts",
    "lint": "eslint . --ext .ts --ignore-pattern 'drizzle.config.ts'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "check": "pnpm run lint && pnpm run typecheck",
    "smoke:auth": "tsx src/scripts/smoke-auth.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/s3-request-presigner": "3.913.0",
    "@hono/node-server": "^1.19.5",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.4",
    "@types/stripe": "^8.0.417",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "postgres": "^3.4.7",
    "prom-client": "^14.2.0",
    "stripe": "^19.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.8.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
